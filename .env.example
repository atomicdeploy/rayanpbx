# RayanPBX Unified Configuration
# This file is shared across all components (Backend, Frontend, TUI, CLI)

# Application
APP_NAME=RayanPBX
APP_ENV=development
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_TIMEZONE=UTC

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0

# WebSocket Server
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=9000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=rayanpbx
DB_USERNAME=rayanpbx
DB_PASSWORD=rayanpbx_secure_password

# Redis (for caching and real-time events)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=7200
JWT_REFRESH_EXPIRATION=604800

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=false

# Asterisk Configuration
ASTERISK_AMI_HOST=127.0.0.1
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USERNAME=admin
ASTERISK_AMI_SECRET=rayanpbx_ami_secret
ASTERISK_CONFIG_PATH=/etc/asterisk
ASTERISK_PJSIP_CONFIG=/etc/asterisk/pjsip.conf
ASTERISK_EXTENSIONS_CONFIG=/etc/asterisk/extensions.conf
ASTERISK_LOG_PATH=/var/log/asterisk

# RayanPBX Configuration
RAYANPBX_EXTENSION_RANGE_START=100
RAYANPBX_EXTENSION_RANGE_END=999
RAYANPBX_DEFAULT_TRUNK_PREFIX=9
RAYANPBX_PAM_ENABLED=true

# SIP Configuration
SIP_REALM=rayanpbx.local
SIP_TRANSPORT=udp
SIP_PORT=5060
SIP_CODECS=ulaw,alaw,g722,opus

# Security
RATE_LIMIT_LOGIN=5
RATE_LIMIT_LOGIN_DECAY=60
BCRYPT_ROUNDS=12

# Pollination.ai Integration
POLLINATION_AI_ENABLED=true
POLLINATION_AI_API_KEY=
POLLINATION_AI_MODEL=gpt-4
POLLINATION_AI_ENDPOINT=https://text.pollinations.ai

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_PATH=/var/log/rayanpbx

# Mail (optional)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@rayanpbx.local
MAIL_FROM_NAME="${APP_NAME}"

# CLI/TUI Styling
CLI_USE_COLOR=true
CLI_USE_EMOJI=true
CLI_USE_FIGLET=true
CLI_USE_LOLCAT=false

# Development
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE="${API_BASE_URL}/api"
VITE_WS_URL="ws://localhost:${WEBSOCKET_PORT}"

# Nuxt Frontend Configuration
NUXT_PUBLIC_API_BASE="${API_BASE_URL}/api"
NUXT_PUBLIC_WS_URL="ws://localhost:${WEBSOCKET_PORT}"
